{
    "manifest_version": 3,
    "name": "Anti Anti Debug",
    "description": "Be able to use developer tools again",
    "version": "1.0.0",
    "author": "Andrew S",
    "icons": {
        "16": "debug-16.png",
        "48": "debug-48.png",
        "128": "debug-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "run_at": "document_start",
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "scripting"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.js",
                "anti-anti-debug.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}